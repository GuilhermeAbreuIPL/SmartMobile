<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".ProductDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botão Fechar (canto superior direito) -->
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_action_close"
            android:contentDescription="Close" />

        <!-- Caminho do Produto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home > Smartphone > Apple"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Nome do Produto -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Imagem do Produto -->
        <View
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/simple_gray"
            android:layout_marginBottom="16dp" />

        <!-- Preço do Produto -->
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price : x.xx €"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Detalhes do Produto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalhes dos produtos"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam quis feugiat dui, a vehicula arcu. Praesent laoreet nibh rutrum elit ultricies sagittis. Etiam nec faucibus leo..."
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- Disponíbilidade -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disponíbilidade"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leiria: 0\nCoimbra: 0\nPorto: 0"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- Botão Adicionar ao Carrinho -->
        <Button
            android:id="@+id/add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar ao carrinho"
            android:backgroundTint="@color/orange"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingVertical="12dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
